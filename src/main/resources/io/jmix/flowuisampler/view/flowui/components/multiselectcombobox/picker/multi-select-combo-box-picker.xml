<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="customersDc"
                    class="io.jmix.flowuisampler.entity.Customer"
                    fetchPlan="_local">
            <loader id="customersDl">
                <query>
                    <![CDATA[select e from sampler_Customer e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <multiSelectComboBoxPicker placeholder="Choose a customers" itemsContainer="customersDc"
                                   metaClass="sampler_Customer"
                                   width="20em">
            <actions>
                <action id="entity_lookup" type="entity_lookup"/>
                <action id="entity_clear" type="entity_clear"/>
            </actions>
        </multiSelectComboBoxPicker>
    </layout>
</view>
