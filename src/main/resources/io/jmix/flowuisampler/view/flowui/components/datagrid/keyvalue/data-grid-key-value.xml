<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <keyValueCollection id="salesDc">
            <loader id="salesLoader">
                <query>
                    <![CDATA[select o.customer, sum(o.amount) from sampler_Order o group by o.customer]]>
                </query>
            </loader>
            <properties>
                <property class="io.jmix.flowuisampler.entity.Customer"
                          name="customer"/>
                <property datatype="decimal"
                          name="sum"/>
            </properties>
        </keyValueCollection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <dataGrid id="salesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="salesDc">
            <columns>
                <column property="customer" header="Customer"/>
                <column property="sum" header="Sum"/>
            </columns>
        </dataGrid>
    </layout>
</view>
