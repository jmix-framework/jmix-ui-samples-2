<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <instance id="pointDc"
                  class="io.jmix.flowuisampler.entity.Point"
                  fetchPlan="_local"/>
    </data>
    <layout>
        <numberField id="numberField" label="Field connected to a container" width="15em"
                         dataContainer="pointDc" property="x"/>
        <hbox>
            <label text="Value in the container:"/>
            <label id="labelValue"/>
        </hbox>
    </layout>
</view>
