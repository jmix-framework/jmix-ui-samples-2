<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="employeesDc"
                    class="io.jmix.flowuisampler.entity.Employee">
            <fetchPlan extends="_base">
                <property name="address" fetchPlan="_base"/>
            </fetchPlan>
            <loader id="employeesLoader">
                <query>
                    <![CDATA[select e from sampler_Employee e]]>
                </query>
            </loader>
        </collection>
        <instance id="employeeDc" class="io.jmix.flowuisampler.entity.Employee">
            <instance id="addressDc" property="address"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <select id="employeeSelect" label="Employee" itemsContainer="employeesDc"
                helperText="Select an employee to display"/>
        <h4 text="Declaratively defined component"/>
        <address dataContainer="addressDc"/>
    </layout>
</view>