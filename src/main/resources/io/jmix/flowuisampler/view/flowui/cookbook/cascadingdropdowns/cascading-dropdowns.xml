<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="planetsDc"
                    class="io.jmix.flowuisampler.entity.Planet"
                    fetchPlan="_base">
            <loader>
                <query>
                    <![CDATA[select p from sampler_Planet p
                    where (select count(m) from sampler_Moon m where m.planet = p) > 0
                    order by p.id]]>
                </query>
            </loader>
        </collection>
        <collection id="moonsDc"
                    class="io.jmix.flowuisampler.entity.Moon"
                    fetchPlan="_base">
            <loader>
                <query>
                    <![CDATA[select m from sampler_Moon m where m.planet = :container_planetsDc order by m.name]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout classNames="flex-row flex-wrap">
        <entityComboBox id="planetsComboBox" label="Planets" metaClass="sampler_Planet" itemsContainer="planetsDc"/>
        <entityComboBox id="moonsComboBox" label="Moons" metaClass="sampler_Moon" itemsContainer="moonsDc"/>
    </layout>
</view>
