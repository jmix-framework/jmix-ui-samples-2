<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <instance id="orderDc"
                  class="io.jmix.flowuisampler.entity.Order"
                  fetchPlan="_local"/>
        <instance id="customerDc"
                  class="io.jmix.flowuisampler.entity.Customer"
                  fetchPlan="_local"/>
    </data>
    <layout>
        <hbox padding="false">
            <comboBox id="amountComboBox"
                      label="Items List"
                      dataContainer="orderDc"
                      property="amount"/>
            <comboBox id="ageComboBox"
                      label="Items Map"
                      dataContainer="customerDc"
                      property="age"/>
            <comboBox id="gradeComboBox"
                      label="Items Enum"
                      dataContainer="customerDc"
                      itemsEnum="io.jmix.flowuisampler.entity.CustomerGrade"
                      property="grade"
                      placeholder="Select grade"/>
        </hbox>
    </layout>
</view>
