<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="sampler">
        <createTable tableName="SAMPLER_CITY">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_sampler_city"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="sampler">
        <createTable tableName="SAMPLER_COUNTRY">
            <column name="ID" type="INT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_sampler_country"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="sampler">
        <createTable tableName="SAMPLER_EMPLOYEE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SAMPLER_EMPLOYEE"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="ADDRESS_ADDRESS_LINE" type="VARCHAR(255)"/>
            <column name="ADDRESS_CITY_ID" type="INT"/>
            <column name="ADDRESS_COUNTRY_ID" type="INT"/>
            <column name="ADDRESS_ZIP" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="sampler">
        <addForeignKeyConstraint baseColumnNames="ADDRESS_CITY_ID" baseTableName="SAMPLER_EMPLOYEE"
                                 constraintName="FK_SAMPLER_EMPLOYEE_ON_ADDRESS_CITY" referencedColumnNames="ID"
                                 referencedTableName="SAMPLER_CITY"/>
    </changeSet>
    <changeSet id="5" author="sampler">
        <addForeignKeyConstraint baseColumnNames="ADDRESS_COUNTRY_ID" baseTableName="SAMPLER_EMPLOYEE"
                                 constraintName="FK_SAMPLER_EMPLOYEE_ON_ADDRESS_COUNTRY" referencedColumnNames="ID"
                                 referencedTableName="SAMPLER_COUNTRY"/>
    </changeSet>

</databaseChangeLog>