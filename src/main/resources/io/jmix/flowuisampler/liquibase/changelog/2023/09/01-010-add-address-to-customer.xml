<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd"        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1"
               author="sampler">
        <addColumn tableName="SAMPLER_CUSTOMER">
            <column name="ADDRESS_COUNTRY_ID"
                    type="INT"/>
            <column name="ADDRESS_ZIP"
                    type="VARCHAR(255)"/>
        </addColumn>
    </changeSet>
    <changeSet id="2"
               author="sampler">
        <addForeignKeyConstraint baseColumnNames="ADDRESS_COUNTRY_ID"
                                 baseTableName="SAMPLER_CUSTOMER"
                                 constraintName="FK_SAMPLER_CUSTOMER_ON_ADDRESS_COUNTRY"
                                 referencedColumnNames="ID"
                                 referencedTableName="SAMPLER_COUNTRY"/>
    </changeSet>
</databaseChangeLog>