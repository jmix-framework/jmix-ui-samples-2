<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view">
    <data>
        <collection id="tipsDc"
                    class="io.jmix.uisamples.entity.TipInfo">
            <fetchPlan extends="_local"/>
            <loader id="tipsLoader">
                <query>
                    <![CDATA[select e from TipInfo e]]>
                </query>
            </loader>
        </collection>
        <collection id="tipInfoesDc" class="io.jmix.uisamples.entity.TipInfo">
            <fetchPlan extends="_base"/>
            <loader id="tipInfoesDl" readOnly="true">
                <query>
                    <![CDATA[select e from TipInfo e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="showPivotTableActionButton"
                    action="tipInfoesDataGrid.showPivotTableAction"
                    text="msg://io.jmix.uisamples.view.flowui.pivottable.showAction/defaultShowActionButton.text"/>
            <button id="customShowPivotTableActionButton"
                    text="msg://io.jmix.uisamples.view.flowui.pivottable.showAction/customShowActionButton.text"
                    />
        </hbox>
        <dataGrid id="tipInfoesDataGrid" dataContainer="tipInfoesDc" minWidth="100px" width="100%">
            <actions>
                <action id="showPivotTableAction" type="pvttbl_showPivotTable"/>
            </actions>
            <columns>
                <column property="totalBill"/>
                <column property="tip"/>
                <column property="smoker"/>
                <column property="size"/>
                <column property="sex"/>
                <column property="day"/>
                <column property="time"/>
            </columns>
        </dataGrid>
    </layout>
</view>