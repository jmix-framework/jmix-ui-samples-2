<overview xmlns="io/jmix/uisamples/view/overview-page.xsd">
    <header>
        <text message="maps.title" classNames="overview-title"/>
        <text message="maps.description" classNames="overview-description"/>
    </header>

    <samples>
        <sample>
            <image src="icons/maps/base.png" route="geo-map-actions"/>
            <text message="baseFeatures.title"
                  route="geo-map-actions"
                  classNames="overview-sample-title"/>
            <tag name="actions" route="geo-map-actions" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="points" route="geo-map-point" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="polygons" route="geo-map-polygon" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="lineStrings" route="geo-map-line-string" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="multiGeometries" route="geo-map-multi-geometries" classNames="overview-tag-font overview-tag-grey"/>
        </sample>
        <sample>
            <image src="icons/maps/styling.png" route="geo-map-point-styling"/>
            <text message="styling.title"
                  route="geo-map-point-styling"
                  classNames="overview-sample-title"/>
            <tag name="point" route="geo-map-point-styling" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="polygon" route="geo-map-polygon-styling" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="lineString" route="geo-map-line-string-styling" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="staticImage" route="geo-map-static-image" classNames="overview-tag-font overview-tag-grey"/>
        </sample>
        <sample>
            <image src="icons/maps/generalization.png" route="geo-map-cluster"/>
            <text message="dataGeneralization.title"
                  route="geo-map-cluster"
                  classNames="overview-sample-title"/>
            <tag name="cluster" route="geo-map-cluster" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="heatmap" route="geo-map-heatmap" classNames="overview-tag-font overview-tag-grey"/>
        </sample>
    </samples>
</overview>