            <tag name="manual" route="manual-data-update" classNames="overview-tag-font overview-tag-green"/>
        </sample>
        <sample>
            <image src="icons/backgrounds/grey.png"/>
            <text message="other.title" classNames="overview-sample-title"/>
            <tag name="keyValueContainer"
                 route="chart-key-value-container"
                 classNames="overview-tag-font overview-tag-grey"/>
            <tag name="nativeJSON"
                 route="chart-native-json"
                 classNames="overview-tag-font overview-tag-grey"/>
            <tag name="export"
                 route="chart-export"
                 classNames="overview-tag-font overview-tag-grey"/>
