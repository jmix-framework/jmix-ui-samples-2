<overview xmlns="io/jmix/uisamples/view/overview-page.xsd">
    <header>
        <text message="charts.title" classNames="overview-title"/>
        <text message="charts.description" classNames="overview-description"/>
    </header>

    <samples>
        <sample>
            <image src="icons/charts/series.png" route="line-series-simple"/>
            <text message="series.title"
                  route="line-series-simple"
                  classNames="overview-sample-title"/>
            <tag name="line" route="line-series-simple" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="bar" route="bar-series-simple" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="pie" route="pie-series-simple" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="scatter" route="scatter-series-simple" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="radar" route="radar-series-simple" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="candlestick" route="candlestick-series-simple" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="funnel" route="funnel-series-simple" classNames="overview-tag-font overview-tag-grey"/>
            <tag name="gauge" route="gauge-series-simple" classNames="overview-tag-font overview-tag-grey"/>
        </sample>
        <sample>
            <image src="icons/charts/dataItems.png" route="entity-data-item"/>
            <text message="dataItems.title" route="entity-data-item" classNames="overview-sample-title"/>
            <tag name="entity" route="entity-data-item" classNames="overview-tag-font overview-tag-blue"/>
            <tag name="map" route="map-data-item" classNames="overview-tag-font overview-tag-blue"/>
            <tag name="simple" route="simple-data-item" classNames="overview-tag-font overview-tag-blue"/>
        </sample>
        <sample>
            <image src="icons/charts/incrementalDataUpdate.png" route="automatic-data-update"/>
            <text message="incrementalDataUpdate.title"
                  route="automatic-data-update"
                  classNames="overview-sample-title"/>
            <tag name="automatic" route="automatic-data-update" classNames="overview-tag-font overview-tag-green"/>
            <tag name="manual" route="manual-data-update" classNames="overview-tag-font overview-tag-green"/>
        </sample>
        <sample>
            <image src="icons/charts/other.png" route="chart-key-value-container"/>
            <text message="other.title" route="chart-key-value-container" classNames="overview-sample-title"/>
            <tag name="keyValueContainer"
                 route="chart-key-value-container"
                 classNames="overview-tag-font overview-tag-yellow"/>
            <tag name="nativeJSON"
                 route="chart-native-json"
                 classNames="overview-tag-font overview-tag-yellow"/>
            <tag name="export"
                 route="chart-export"
                 classNames="overview-tag-font overview-tag-yellow"/>
        </sample>
    </samples>
</overview>