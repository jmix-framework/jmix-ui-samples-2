<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:pivot="http://jmix.io/schema/pvttbl/ui">
    <data>
        <collection id="tipsDc"
                    class="io.jmix.uisamples.entity.TipInfo">
            <fetchPlan extends="_local"/>
            <loader id="tipsLoader">
                <query>
                    <![CDATA[select e from TipInfo e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout expand="pivotTable" spacing="true">
        <hbox>
            <checkbox id="showRowTotalsCheckbox" label="msg://showRowTotalsCheckbox.label" value="true"/>
            <checkbox id="showColumnTotalsCheckbox" label="msg://showColumnTotalsCheckbox.label" value="true" />
            <checkbox id="showUiCheckbox" label="msg://showUiCheckbox.label" value="true"/>
            <checkbox id="disableCheckbox" label="msg://disableCheckbox.label" value="false"/>
        </hbox>
        <pivot:pivotTable id="pivotTable"
                          dataContainer="tipsDc"
                          showColumnTotals="true"
                          showRowTotals="true"
                          showUI="true">
            <pivot:properties>
                <pivot:property name="totalBill"/>
                <pivot:property name="tip"/>
                <pivot:property name="sex"/>
                <pivot:property name="smoker"/>
                <pivot:property name="day"/>
                <pivot:property name="time"/>
                <pivot:property name="size"/>
            </pivot:properties>
            <pivot:columns>
                <pivot:column value="msg://io.jmix.uisamples.entity/TipInfo.day"/>
                <pivot:column value="msg://io.jmix.uisamples.entity/TipInfo.time"/>
            </pivot:columns>
            <pivot:rows>
                <pivot:row value="msg://io.jmix.uisamples.entity/Sex"/>
                <pivot:row value="msg://io.jmix.uisamples.entity/TipInfo.smoker"/>
            </pivot:rows>
        </pivot:pivotTable>
    </layout>
</view>