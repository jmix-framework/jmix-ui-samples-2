<overview xmlns="io/jmix/uisamples/view/overview-page.xsd">
    <header>
        <text message="title" component="h2"/>
        <text message="description"/>
    </header>

    <samples>
        <sample>
            <image src="icons/maps/base.png" route="geo-map-actions"/>
