<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:vcc="http://jmix.io/schema/vaadin-commercial-components/ui"
      xmlns:charts="http://jmix.io/schema/charts/ui">
    <data readOnly="true">
        <collection id="transportDc"
                    class="io.jmix.uisamples.entity.TransportCount">
            <fetchPlan extends="_local"/>
            <loader id="transportDl" readOnly="true">
                <query>
                    <![CDATA[select e from TransportCount e order by e.year]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <layout>
        <vcc:board id="board" height="100%" minHeight="40em">
            <vcc:boardRow>
                <hbox classNames="border-r border-b">
                    <vbox spacing="false" width="unset">
                        <span text="msg://carsSpan.label" classNames="text-secondary text-s font-medium"/>
                        <span id="carsCount" classNames="text-xl"/>
                        <span id="carsPercentage" themeNames="badge"/>
                    </vbox>
                    <image resource="icons/layouts/board/car.png" height="10em" width="10em"/>
                </hbox>
                <hbox classNames="border-r border-b">
                    <vbox spacing="false" width="unset">
                        <span text="msg://motorcyclesSpan.label" classNames="text-secondary text-s font-medium"/>
                        <span id="motorcyclesCount" classNames="text-xl"/>
                        <span id="motorcyclesPercentage" themeNames="badge"/>
                    </vbox>
                    <image resource="icons/layouts/board/motorcycle.png" height="10em" width="10em"/>
                </hbox>
                <hbox classNames="border-r border-b">
                    <vbox spacing="false" width="unset">
                        <span text="msg://bicyclesSpan.label" classNames="text-secondary text-s font-medium"/>
                        <span id="bicyclesCount" classNames="text-xl"/>
                        <span id="bicyclesPercentage" themeNames="badge"/>
                    </vbox>
                    <image resource="icons/layouts/board/bicycle.png" height="10em" width="10em"/>
                </hbox>
                <hbox classNames="border-b" spacing="false">
                    <vbox spacing="false" width="unset">
                        <span text="msg://totalCountSpan.label" classNames="text-secondary text-s font-medium"/>
                        <span id="totalCount" classNames="text-xl"/>
                    </vbox>
                    <image resource="icons/layouts/board/dollar.png" height="10em" width="10em"/>
                </hbox>
            </vcc:boardRow>
            <vcc:boardRow>
                <vbox padding="false">
                    <charts:chart id="chart" width="100%" minHeight="30em">
                        <charts:tooltip trigger="AXIS">
                            <charts:formatterFunction>
                                <![CDATA[
                        function (params) {
                              var tar = params[1];

                              return '<b>Year:</b> ' + tar.name + '<br/><hr/>' +
                              '<b>Cars:</b> ' + tar.value.cars + '<br/>' +
                              '<b>Motorcycles:</b> ' + tar.value.motorcycles + '<br/>' +
                              '<b>Bicycles:</b> ' + tar.value.bicycles + '<br/>';
                            }
                            ]]>
                            </charts:formatterFunction>
                            <charts:axisPointer type="SHADOW"/>
                        </charts:tooltip>
                        <charts:legend orientation="VERTICAL" right="0" top="40%"/>

                        <charts:xAxes>
                            <charts:xAxis/>
                        </charts:xAxes>
                        <charts:yAxes>
                            <charts:yAxis/>
                        </charts:yAxes>

                        <charts:dataSet>
                            <charts:source dataContainer="transportDc"
                                           categoryField="year" valueFields="cars motorcycles bicycles"/>
                        </charts:dataSet>

                        <charts:series>
                            <charts:line name="Cars" stack="stack">
                                <charts:areaStyle/>
                            </charts:line>
                            <charts:line name="Motorcycles" stack="stack">
                                <charts:areaStyle/>
                            </charts:line>
                            <charts:line name="Bicycles" stack="stack">
                                <charts:areaStyle/>
                            </charts:line>
                        </charts:series>
                    </charts:chart>
                </vbox>
            </vcc:boardRow>
        </vcc:board>
    </layout>
</view>
