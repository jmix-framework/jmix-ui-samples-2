<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:chrt="http://io.jmix.uisamples/chart.xsd">
    <layout padding="false">
        <tabSheet width="100%">
            <tab id="barChartTab" label="Issues bar">
                <chrt:chart width="99%" minHeight="30em"
                            labels="Backlog, Next, In-progress, Review, QA, Done"
                            data="18, 8, 5, 6, 29, 53">
                    <chrt:barChart name="Bars"/>
                    <chrt:toolbox>
                        <chrt:buttons>
                            <chrt:button type="zoom"/>
                            <chrt:button type="download"/>
                        </chrt:buttons>
                    </chrt:toolbox>
                    <chrt:title text="Jmix Framework Issues"
                                subText="The current status is presented in bars"/>
                </chrt:chart>
            </tab>
            <tab id="roseChart" label="Issues rose">
                <chrt:chart width="99%" minHeight="30em"
                            labels="Backlog, Next, In-progress, Review, QA, Done"
                            data="18, 8, 5, 6, 29, 53">
                    <chrt:nightingaleRoseChart name="Issue"/>
                    <chrt:title text="Jmix Framework Issues"
                                subText="The current status is presented in rose chart"/>
                </chrt:chart>
            </tab>
        </tabSheet>
    </layout>
</view>
