<view xmlns="http://jmix.io/schema/flowui/view">
    <data readOnly="true">
        <collection id="ordersDc"
                    class="io.jmix.uisamples.entity.Order">
            <fetchPlan extends="_local">
                <property name="customer" fetchPlan="_local"/>
            </fetchPlan>
            <loader id="ordersDl">
                <query>
                    <![CDATA[select e from uisamples_Order e order by e.date]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator>
            <refresh loader="ordersDl">
                <onViewEvent type="Ready"/>
            </refresh>
        </dataLoadCoordinator>
    </facets>
    <layout classNames="data-load-coordinator">
        <h4 text="CollectionContainer items count:"/>
        <flexLayout flexDirection="ROW" flexWrap="WRAP" classNames="flex-with-gap">
            <icon icon="HAMMER"/>
            <span text="onInit:"/>
            <span id="onInitItemCount"/>
        </flexLayout>
        <flexLayout flexDirection="ROW" flexWrap="WRAP" classNames="flex-with-gap">
            <icon icon="BROWSER"/>
            <span text="onBeforeShow:"/>
            <span id="onBeforeShowItemCount"/>
        </flexLayout>
        <flexLayout flexDirection="ROW" flexWrap="WRAP" classNames="flex-with-gap">
            <icon icon="CHECK"/>
            <span text="onReady:"/>
            <span id="onReadyItemCount"/>
        </flexLayout>
        <dataGrid id="dataGrid" width="100%" minHeight="20em"
                  dataContainer="ordersDc">
            <columns>
                <column property="date"/>
                <column property="customer"/>
                <column property="amount"/>
                <column property="description"/>
            </columns>
        </dataGrid>
    </layout>
</view>
