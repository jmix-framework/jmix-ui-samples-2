<overview xmlns="io/jmix/uisamples/view/overview-page.xsd">
    <header>
        <text message="overview.title" classNames="overview-title"/>
        <text message="overview.description" classNames="overview-description"/>
    </header>

    <samples>
        <sample>
            <image src="icons/main/components.png"
                   route="components"/>
            <text message="components.title"
                  classNames="overview-sample-title"
                  route="components"/>
            <text message="components.description" classNames="overview-description"/>
        </sample>
        <sample>
            <image src="icons/main/layouts.png" route="layouts"/>
            <text message="layouts.title" classNames="overview-sample-title" route="layouts"/>
            <text message="layouts.description" classNames="overview-description"/>
        </sample>
        <sample>
            <image src="icons/main/dialogsAndNotifications.png" route="dialogs-and-notifications"/>
            <text message="dialogsAndNotifications.title" classNames="overview-sample-title" route="dialogs-and-notifications"/>
            <text message="dialogsAndNotifications.description" classNames="overview-description"/>
        </sample>
        <sample>
            <image src="icons/main/facets.png" route="facets"/>
            <text message="facets.title" classNames="overview-sample-title" route="dialogs-and-notifications"/>
            <text message="facets.description" classNames="overview-description"/>
        </sample>
        <sample>
            <image src="icons/main/dialogsAndNotifications.png" route="charts"/>
            <text message="charts.title" classNames="overview-sample-title" route="dialogs-and-notifications"/>
            <text message="charts.description" classNames="overview-description"/>
        </sample>
        <sample>
            <image src="icons/main/dialogsAndNotifications.png" route="maps"/>
            <text message="maps.title" classNames="overview-sample-title" route="dialogs-and-notifications"/>
            <text message="maps.description" classNames="overview-description"/>
        </sample>
        <sample>
            <image src="icons/main/customComponents.png" route="custom-component"/>
            <text message="customComponents.title" classNames="overview-sample-title" route="custom-component"/>
            <text message="customComponents.description" classNames="overview-description"/>
        </sample>
        <sample>
            <image src="icons/main/cookbook.png" route="cookbook"/>
            <text message="cookbook.title" classNames="overview-sample-title" route="cookbook"/>
            <text message="cookbook.description" classNames="overview-description"/>
        </sample>
    </samples>

    <resources>
        <text message="resources.title" classNames="overview-title"/>
        <text message="resource.website" href="https://jmix.io" classNames="overview-route"/>
        <text message="resource.documentation" href="https://docs.jmix.io" classNames="overview-route"/>
        <text message="resource.forum" href="https://forum.jmix.io/" classNames="overview-route"/>
        <text message="resource.sources"
              href="https://github.com/jmix-framework/jmix-ui-samples-2"
              classNames="overview-route"/>
    </resources>
</overview>